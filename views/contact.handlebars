<div class="row">
    <div class="col-12">
        <h1>Contact Us</h1>
        <p>Please fill your details below</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <form action="" method="POST" id="contact-form" autocomplete="off" novalidate="novalidate">
            <div class="form-group">
                <label for="name">* Name:</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="* Name:">
            </div>
            <div class="form-group">
                <label for="email" style="display:none">* Email:</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="* Email:">
            </div>
            <div class="form-group">
                <label for="phone" style="display:none">* Phone:</label>
                <input type="tel" name="phone" id="phone" class="form-control" placeholder="* Phon:">
            </div>
            <div class="form-group">
                <label for="message" style="display:none">* Your message:</label>
                <textarea name="message" id="message" cols="30" rows="6" class="form-control"
                    placeholder="* Youe message:"></textarea>
            </div>
            <button type="submit" name="submit" id="submit" class="btn btn-primary">Contact Me!</button>
        </form>
    </div>
</div>